{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appServiceName": {
      "value": "qooked"
    },
    "cosmosDbContainers": {
      "value": [
        {
          "name": "recipes",
          "partitionKey": "/userId",
          "throughput": "400",
          "indexPaths": [
            {
              "path": "/*"
            }
          ]
        },
        {
          "name": "users",
          "partitionKey": "/id",
          "throughput": "400",
          "indexPaths": [
            {
              "path": "/*"
            },
            {
              "indexes": [
                {
                  "dataType": "String",
                  "kind": "Range"
                }
              ],
              "path": "/email/?"
            }
          ]
        }
      ]
    },
    "cosmosDbLocation": {
      "value": "Central US"
    },
    "servicePrincipalObjectId": {
      "value": "1f966b40-dffc-453a-95de-bf856274604d"
    }
  }
}
